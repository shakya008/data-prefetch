{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "outDir": ".",
    "rootDir": ".",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "declaration": true,
    "lib": ["ES5", "ES2015", "DOM", "ScriptHost"]
  },
  "exclude": [
    "node_modules"
  ],
  "compileOnSave": false,
  "buildOnSave": false
}
